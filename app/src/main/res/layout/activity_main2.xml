<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sc.ps.ilksl.Main2Activity">

    <include
        android:id="@+id/include"
        layout="@layout/content_main2" />

    <LinearLayout
        android:id="@+id/fabMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/lnMenu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ข้อมูลส่วนตัว"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#66BB6A"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:id="@+id/fab4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-4dp"
                android:src="@android:drawable/ic_dialog_email"
                android:tint="#ffffff"
                android:background="@drawable/bg_fab_menu"
                android:padding="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnMenu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ลงประกาศ"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#66BB6A"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:id="@+id/fab1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-4dp"
                android:src="@android:drawable/ic_dialog_email"
                android:tint="#ffffff"
                android:background="@drawable/bg_fab_menu"
                android:padding="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnMenu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/tvMenu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เข้าระบบ"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#66BB6A"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:id="@+id/fab2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-4dp"
                android:src="@android:drawable/ic_dialog_email"
                android:tint="#ffffff"
                android:background="@drawable/bg_fab_menu"
                android:padding="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnMenu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/tvMenu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รายงาน"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#66BB6A"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:id="@+id/fab5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-4dp"
                android:src="@android:drawable/ic_dialog_email"
                android:tint="#ffffff"
                android:background="@drawable/bg_fab_menu"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnMenu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ภาษา"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#66BB6A"/>
            <ImageView
                android:id="@+id/fab3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-4dp"
                android:src="@android:drawable/ic_dialog_email"
                android:tint="#ffffff"
                android:background="@drawable/bg_fab_menu"
                android:padding="10dp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/fab"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/fab_margin"
            android:src="@android:drawable/ic_dialog_email"
            android:tint="#ffffff"
            android:background="@drawable/bg_fab_menu"
            android:padding="10dp"
            android:layout_gravity="bottom|right"/>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
