<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ถ่ายรูป"
                android:textSize="22sp"
                android:gravity="center"
                android:padding="10dp"
                android:background="#bdffac"/>
            <TextView
                android:id="@+id/tvStorage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="เลือกรูป"
                android:textSize="22sp"
                android:gravity="center"
                android:padding="10dp"
                android:background="#aafbff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/reImageGallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
                <!--<ImageView
                    android:id="@+id/imProfiles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>-->
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ชื่อ"
                android:textSize="22sp"
                android:padding="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tvSaveImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="บันทึก"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvCancelImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ยกเลิก"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>